<%= simple_form_for @client, defaults: form_defaults do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :cpf %>
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :address %>
  </div>

  <div class="form-actions pull-right">
    <%= f.button :submit, "#{f.object.new_record? ? 'Criar' : 'Editar'}", class: "btn-primary" %>
  </div>
<% end %>
// original bootstrap ----------------------------------------------
@import "twitter/bootstrap";
@import "bootstrap-datetimepicker";

// mixins ------------------------------------------------------------------------------------------
@mixin border_radius($radius) {
    -moz-border-radius: $radius;
    -webkit-border-radius: $radius;
    border-radius: $radius;
}
@mixin shadow($h_offset, $v_offset, $blur_distance, $spread_distance, $color) {
  -moz-box-shadow: $h_offset $v_offset $blur_distance $spread_distance $color;//10px 10px 5px #000000;
  -webkit-box-shadow: $h_offset $v_offset $blur_distance $spread_distance $color;
  box-shadow: $h_offset $v_offset $blur_distance $spread_distance $color;
}

